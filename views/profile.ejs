<%- include('partials/header') -%>
<div class="container p-5">
  <div class="row mt-5">
      <div >
          <div class="text-center">
            <h2 class="text-center">My Profile</h2>
              <h1 class=""><strong>Welcome back</strong> <%= user.userName %></h1>
              <!-- <p><strong>Email</strong>: <%= user.email %></p> -->
          </div>
          <div class="p-5 bg-light">
            <h2>Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST" class="mw-30">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-outline-success" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-4">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-outline-success" href="/feed">Return to Feed</a>
           <a href="/logout" class="btn btn-outline-success">Logout</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>