<%- include('partials/header-auth') -%>
<div class="">
  <div class="d-flex justify-content-between align-items-center bg-light text-white p-3">
    <a class="btn btn-outline-success" href="/feed">Return to Feed</a>
    <h2 class="text-center lead fs-3 text-dark text-uppercase border p-3">My Posts</h2>
    <h1 class="text-center text-dark blockquote fw-light"><strong>Welcome back</strong> <%= user.userName %></h1>
  </div>  
  <div class="container mt-5">
    <div class="col-md-6">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
        <li class="col-9 justify-content-between mt-5">
          <a href="/post/<%= posts[i]._id%>">
            <img class="img-fluid" src="<%= posts[i].image%>">
          </a>
        </li>
        <% } %>
      </ul>
    </div>  
  </div>
</div>


