<%- include('partials/header-auth') -%>
<div class="container p-2">
  <div class="col-6 m-3 d-flex">
    <a class="btn btn-outline-success" href="/profile">Return to Profile</a>
    <a class="btn btn-outline-success" href="/feed">Return to Feed</a>
  </div>
  <div>
    <div class="p-4 text-center bg-light">
      <img class="m-2" width="500" src="<%= post.image%>" />
      <div class="d-flex">
        <p><%= post.createdAt.toDateString() %></p>
        <form
          class=""
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button
            class="btn btn-outline-success fa fa-thumbs-up"
            type="submit"
          ></button>
          <p>Likes: <%=post.likes%></p>
        </form>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class=""
        >
          <button class="btn btn-danger fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
  </div>
  <div>
    <h2 class="text-center"><%= post.title %></h2>
    <p class="text-center"><%= post.caption %></p>
  </div>
</div>
