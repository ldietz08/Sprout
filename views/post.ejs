<%- include('partials/header-auth') -%>
<div class="container p-2">
  <div class="col-2 mt-3">
    <a class="btn btn-outline-success" href="/profile">Return to Profile</a>
    <a class="btn btn-outline-success mt-2" href="/feed">Return to Feed</a>
  </div>
  <div class="">
    <div class="p-4 text-center">
      <img class="m-2" width="400" src="<%= post.image%>" />
      <div class="">
        <form
          class=""
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button
            class="btn btn-outline-success fa fa-thumbs-up"
            type="submit"
          ></button>
          <p>Likes: <%=post.likes%></p>
        </form>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class=""
        >
          <button class="btn btn-danger fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
  </div>
  <div class="mt-2">
    <h2><%= post.title %></h2>
    <p><%= post.caption %></p>
  </div>
</div>

<%- include('partials/footer') -%>
